<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="@dimen/dimen_26dp"
        android:background="@color/color_EE0000"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_58dp">
        <ImageView
            android:id="@+id/iv_exit"
            android:paddingLeft="@dimen/dimen_12dp"
            android:paddingRight="@dimen/dimen_6dp"
            android:src="@drawable/ic_exit"
            android:layout_width="@dimen/dimen_36dp"
            android:layout_height="match_parent" />
        <EditText
            android:layout_weight="1"
            android:id="@+id/et_input"
            android:paddingLeft="@dimen/dimen_12dp"
            android:textSize="@dimen/dimen_16dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textColor="@color/color_FFFFFF"
            android:hint="输入歌名搜索"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHint="@color/color_FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="搜索"
            android:id="@+id/tv_searcher"
            android:visibility="gone"
            android:textColor="@color/color_FFFFFF"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:overScrollMode="never"
        android:id="@+id/recycler"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>



