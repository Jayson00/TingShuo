<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp">

        <ImageView
            android:id="@+id/radio_img"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_music"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_toRightOf="@id/radio_img"
            android:ellipsize="end"
            android:textSize="@dimen/dimen_16dp"
            android:lineSpacingExtra="@dimen/dimen_6dp"
            android:maxLines="2"
            android:text="歌单名称"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_below="@id/radio_img"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@color/color_EDEFF3"/>
    </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/check_box"
        android:src="@drawable/ic_uncheck"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:gravity="center" />

</LinearLayout>