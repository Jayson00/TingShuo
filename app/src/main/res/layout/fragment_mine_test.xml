<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fafafa"
    android:layout_marginBottom="40dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="@dimen/dimen_80dp">
            <LinearLayout
                android:id="@+id/lv_local"
                android:gravity="center"
                android:background="@color/color_FFFFFF"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50dp">
                <ImageView
                    android:clickable="false"
                    android:paddingLeft="@dimen/dimen_6dp"
                    android:src="@drawable/ic_album"
                    android:layout_width="@dimen/dimen_46dp"
                    android:layout_height="@dimen/dimen_46dp" />
                <LinearLayout
                    android:clickable="false"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp">
                    <TextView
                        android:clickable="false"
                        android:text="本地歌曲"
                        android:textSize="@dimen/dimen_14dp"
                        android:textColor="@color/color_000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:clickable="false"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp"
                    android:src="@drawable/song_pause_black"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lv_love"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:background="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:clickable="false"
                    android:gravity="center"
                    android:background="@color/color_FFFFFF"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_50dp">
                    <ImageView
                        android:clickable="false"
                        android:paddingLeft="@dimen/dimen_6dp"
                        android:src="@drawable/ic_love"
                        android:layout_width="@dimen/dimen_46dp"
                        android:layout_height="@dimen/dimen_46dp" />
                    <LinearLayout
                        android:clickable="false"
                        android:paddingLeft="@dimen/dimen_8dp"
                        android:paddingRight="@dimen/dimen_8dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp">
                        <TextView
                            android:clickable="false"
                            android:text="我的收藏"
                            android:textSize="@dimen/dimen_14dp"
                            android:textColor="@color/color_000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:clickable="false"
                        android:paddingLeft="@dimen/dimen_8dp"
                        android:paddingRight="@dimen/dimen_8dp"
                        android:src="@drawable/song_pause_black"
                        android:layout_width="@dimen/dimen_40dp"
                        android:layout_height="@dimen/dimen_40dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_26dp"
            android:layout_marginBottom="@dimen/dimen_26dp"
            android:orientation="vertical"
            android:background="@color/color_FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lv_login"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60dp">
                <ImageView
                    android:clickable="false"
                    android:src="@drawable/ic_login_black"
                    android:layout_width="@dimen/dimen_36dp"
                    android:layout_height="@dimen/dimen_36dp" />
                <TextView
                    android:clickable="false"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:text="登录"
                    android:textSize="@dimen/dimen_14dp"
                    android:layout_weight="1"
                    android:textColor="@color/color_000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:clickable="false"
                    android:layout_marginRight="@dimen/dimen_18dp"
                    android:src="@drawable/ic_get_into"
                    android:layout_width="@dimen/dimen_18dp"
                    android:layout_height="@dimen/dimen_18dp" />
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dimen_40dp"
                android:background="@color/color_CDCDCD"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"/>
            <LinearLayout
                android:id="@+id/lv_friend"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60dp">
                <ImageView
                    android:clickable="false"
                    android:layout_width="@dimen/dimen_36dp"
                    android:layout_height="@dimen/dimen_36dp" />
                <TextView
                    android:clickable="false"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:text="我的好友"
                    android:layout_weight="1"
                    android:textSize="@dimen/dimen_14dp"
                    android:textColor="@color/color_000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:clickable="false"
                    android:layout_marginRight="@dimen/dimen_18dp"
                    android:src="@drawable/ic_get_into"
                    android:layout_width="@dimen/dimen_18dp"
                    android:layout_height="@dimen/dimen_18dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/color_EAEAEA"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp">
            <TextView
                android:layout_marginLeft="@dimen/dimen_18dp"
                android:text="自建歌单"
                android:textSize="@dimen/dimen_14dp"
                android:textColor="@color/color_545454"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/lv_add"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:clickable="false"
                    android:src="@drawable/ic_build"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp" />
                <Button
                    android:text="新建"
                    android:clickable="false"
                    android:textSize="@dimen/dimen_12dp"
                    android:background="@color/color_transparent"
                    android:layout_marginRight="@dimen/dimen_26dp"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lv_editor"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:clickable="false"
                    android:src="@drawable/ic_edit"
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp" />
                <Button
                    android:text="编辑"
                    android:clickable="false"
                    android:id="@+id/btn_editor"
                    android:textSize="@dimen/dimen_12dp"
                    android:background="@color/color_transparent"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:paddingBottom="@dimen/dimen_6dp"
                android:paddingTop="@dimen/dimen_6dp"
                android:paddingLeft="@dimen/dimen_18dp"
                android:paddingRight="@dimen/dimen_18dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/dimen_6dp"
            android:id="@+id/ll_mycollection_bottom_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/color_E6E6E6"
            android:orientation="vertical"
            android:visibility="gone">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_E5E5E5E"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_46dp"
                android:background="@color/color_FFFFFF">
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:text="已选择"
                    android:textColor="@color/color_1A1A1A"
                    android:textSize="@dimen/dimen_14dp"/>
                <TextView
                    android:id="@+id/tv_select_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_toRightOf="@+id/tv"
                    android:text="0"
                    android:textColor="@color/color_1A1A1A"
                    android:textSize="@dimen/dimen_14dp"/>
                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/dimen_33dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_16dp"
                    android:background="@drawable/button_noclickable_shape"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@color/color_B7B8BD"
                    android:textSize="@dimen/dimen_14dp"/>
                <TextView
                    android:id="@+id/select_all"
                    android:layout_width="@dimen/dimen_80dp"
                    android:layout_height="@dimen/dimen_33dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_16dp"
                    android:layout_toLeftOf="@+id/btn_delete"
                    android:background="@drawable/bg_selete_all"
                    android:gravity="center"
                    android:text="全选"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/dimen_14dp"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>