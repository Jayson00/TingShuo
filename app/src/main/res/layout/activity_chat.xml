<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.hjm.tingshuo.Activity.ChatActivity">

    <include
        android:id="@+id/ac_head"
        layout="@layout/activities_title" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/ac_head"
        android:id="@+id/recycler_chat"
        android:overScrollMode="never"
        android:layout_marginBottom="@dimen/dimen_70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_switch_type"
            android:layout_width="@dimen/dimen_36dp"
            android:layout_height="@dimen/dimen_36dp"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:layout_marginRight="@dimen/dimen_6dp"
            android:src="@drawable/ic_hint_voice" />

        <EditText
            android:id="@+id/et_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:layout_marginRight="@dimen/dimen_6dp"
            android:layout_weight="1"
            android:imeOptions="actionSend"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_voice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:layout_marginRight="@dimen/dimen_6dp"
            android:layout_weight="1"
            android:background="@drawable/voice_bg"
            android:text="按住 说话" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginRight="@dimen/dimen_6dp"
            android:background="@color/color_CDCDCD"
            android:text="发送" />
    </LinearLayout>


</RelativeLayout>





