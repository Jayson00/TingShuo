<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/activities_title"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_upload"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp" />
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lin_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_logo"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="16dp"
                    android:drawableStart="@drawable/phone"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColorHint="#B3B3B3"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ED0E38" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_logo"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/verification_code"
                    android:drawablePadding="16dp"
                    android:drawableStart="@drawable/verification_code"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLength="11"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColorHint="#B3B3B3"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ED0E38" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_regist"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:text="立即注册"
                    android:textSize="16sp"
                    android:textColor="@color/color_000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/cb_remember"
                        android:layout_width="@dimen/dimen_30dp"
                        android:layout_height="@dimen/dimen_30dp" />
                    <TextView
                        android:text="记住密码"
                        android:textSize="16sp"
                        android:textColor="@color/color_000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_commit"
                android:text="登录"
                android:textSize="@dimen/dimen_18dp"
                android:textColor="@color/color_000000"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_60dp"
                android:background="@drawable/login_shape"
                android:layout_width="@dimen/dimen_280dp"
                android:layout_height="@dimen/dimen_50dp" />
            <Button
                android:text="退出登录"
                android:visibility="gone"
                android:id="@+id/btn_login_out"
                android:textSize="@dimen/dimen_18dp"
                android:textColor="@color/color_000000"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_60dp"
                android:background="@drawable/login_shape"
                android:layout_width="@dimen/dimen_280dp"
                android:layout_height="@dimen/dimen_50dp" />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>