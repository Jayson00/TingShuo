<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" >


    <ImageView
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:id="@+id/iv_show_photo"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp" />
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:singleLine="true"
            android:text="11111111"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:id="@+id/text_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_16dp" />
        <TextView
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="11111111"
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/dimen_20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_notification_pre"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:src="@drawable/ic_pre"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp" />
        <ImageView
            android:id="@+id/iv_notification_play"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:src="@drawable/ic_pause"
            android:layout_width="@dimen/dimen_26dp"
            android:layout_height="@dimen/dimen_26dp" />
        <ImageView
            android:id="@+id/iv_notification_next"
            android:src="@drawable/ic_next"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp" />
    </LinearLayout>


</LinearLayout>