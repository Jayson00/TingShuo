<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_cornor_10"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_5dp">

        <TextView
            android:gravity="center"
            android:text="提示"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="@dimen/dimen_5dp"
            android:textColor="@color/color_44506D"
            android:layout_marginTop="@dimen/dimen_7dp"
            android:textSize="@dimen/dimen_16dp" />

        <TextView
            android:layout_marginTop="@dimen/dimen_5dp"
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dimen_10dp"
            android:textColor="#1a1a1a"
            android:textSize="@dimen/dimen_13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/color_E3E5EA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="关闭"
                android:textColor="@color/color_3995FA"
                android:textSize="@dimen/dimen_14dp" />

            <View
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_CDCDCD" />

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_3995FA"
                android:textSize="@dimen/dimen_14dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>